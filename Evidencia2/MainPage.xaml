<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Evidencia2.MainPage"
             BackgroundColor="Black">

    <ScrollView>
        <VerticalStackLayout
            Padding="20"
            Spacing="20"
            VerticalOptions="CenterAndExpand"
            HorizontalOptions="Center">

            <Label
                Text="U PAR-KING"
                Style="{StaticResource Headline}"
                TextColor="Aqua"
                FontSize="{OnPlatform Android=22, iOS=24, WinUI=26}"
                HorizontalOptions="Center"
                SemanticProperties.HeadingLevel="Level1" />

            <Image
                Source="car.png"
                HeightRequest="{OnPlatform Android=140, iOS=150, WinUI=180}"
                Aspect="AspectFit"
                HorizontalOptions="Center"
                SemanticProperties.Description="logo de auto" />

            <Label
                Text="WELCOME"
                Style="{StaticResource SubHeadline}"
                TextColor="White"
                FontSize="{OnPlatform Android=16, iOS=18, WinUI=20}"
                HorizontalOptions="Center"
                SemanticProperties.HeadingLevel="Level2"
                SemanticProperties.Description="Bienvenido" />

            <Button
                x:Name="SignUpBtn"
                Text="Sign up"
                BackgroundColor="White"
                TextColor="Black"
                CornerRadius="10"
                HeightRequest="50"
                WidthRequest="280"
                FontSize="18"
                HorizontalOptions="Center"
                Margin="0,10,0,0"/>

            <Button
                x:Name="LogInBtn"
                Text="Log in"
                BackgroundColor="Aqua"
                TextColor="Black"
                CornerRadius="10"
                HeightRequest="50"
                WidthRequest="280"
                FontSize="18"
                HorizontalOptions="Center"
                Margin="0,10,0,0"/>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>



